       <div id="fh5co-product">
            <div class="container">
                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                        <h2>Add New Product</h2>
                        <p><em>All fields are required</em></p>
                    </div>

                </div>

                <div class="row animate-box">
                    <div class="col-md-8 col-md-offset-2 fh5co-heading">

                        <form class="new-recipe-form" action="#">
                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="title">product_name</label>
                                    <input type="text" id="title" class="form-control" placeholder="">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="ingredients">Stock</label>
                                    <textarea name="ingredients" id="ingredients" cols="30" rows="10"
                                        class="form-control" placeholder=""></textarea>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="steps">Category_id</label>
                                    <textarea name="steps" id="steps" cols="30" rows="10" class="form-control"
                                        placeholder=""></textarea>
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="image_link">Image link</label>
                                    <input type="text" id="image_link" class="form-control" placeholder="A url to your image">
                                </div>
                            </div>

                            <div class="row form-group">
                                <div class="col-md-12">
                                    <label for="category">Category</label>
                                </div>
                                <div class="col-md-12">
                                    <select id="category" class="select-css">
                                        <option value="">Please choose a category</option>
                                        <option value="Coffee">Coffee</option>
                                        <option value="Tea">Tea</option>
                                        <option value="Equipment">Equipment</option>
                                        <option value="Merchandise">Merchandise</option>
                                        <option value="Milk">Milk </option>
                                    </select>
                                </div>

                            </div>
                            <div class="form-group mt-40 text-center">
                                <input type="submit" value="Submit" class="btn btn-primary">
                            </div>
                        </form>

                    </div>

                </div>

    <script src="/javascript/add-post.js"></script>

